{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Create new category | Blog'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'Create new category'|trans }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'Save'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('category_index') }}" class="btn btn-link">
            {{ 'Back to list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}