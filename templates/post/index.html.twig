{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Blog'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'Blog'|trans }}</h1>
    {% if posts is defined and posts|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'id'|trans }}</th>
                <th>{{ 'Created at'|trans }}</th>
                <th>{{ 'Title'|trans }}</th>
                <th>{{ 'Read more'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.createdAt|format_date('long') }}</td>
                    <td>{{ post.title }}</td>
                    <td>
                        <a href="{{ url('post_show', {id: post.id}) }}" title="{{ 'action.view'|trans }}">
                            {{ 'Read more'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}