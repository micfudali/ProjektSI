{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Posts | Blog'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'Posts'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <a href="{{ url('category_index')}}" title="{{ 'action.go_to_categories'|trans }}">
            {{ 'Go to categories'|trans }}
        </a>
        <a href="{{ url('post_create')}}" title="{{ 'action.create'|trans }}">
            {{ 'Create new post'|trans }}
        </a>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'id'|trans, 'post.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Created at'|trans, 'post.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Title'|trans, 'post.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Category'|trans, 'post.title') }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for post in pagination.items %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.createdAt|format_date('long') }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.category.title }}</td>
                    <td>
                        <a href="{{ url('post_show', {id: post.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'Read more'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('post_edit', {id: post.id}) }}" title="{{ 'action.edit'|trans }}">
                            {{ 'Edit'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('post_delete', {id: post.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'Delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}