{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Post | Blog'|trans({'%id%': post.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Post Details'|trans({'%id%': post.id|default('')}) }}</h1>
    {% if post is defined and post|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'id'|trans }}</dt>
            <dd>{{ post.id }}</dd>
            <dt>{{ 'Created at'|trans }}</dt>
            <dd>{{ post.createdAt|format_date('long') }}</dd>
            <dt>{{ 'Title'|trans }}</dt>
            <dd>{{  post.title }}</dd>
            <dt>{{ 'Category'|trans }}</dt>
            <dd>{{  post.category.title }}</dd>
            <dt>{{ 'Contents'|trans }}</dt>
            <dd>{{ post.contents }}</dd>
        </dl>
        <h2>{{ 'Comments section'|trans }}</h2>
        {% for comment in post.comments %}
            <dl class="dl-horizontal">
                <dt>{{ 'Email' }}</dt>
                <dd>{{ comment.email }}</dd>
                <dt>{{ 'Nick' }}</dt>
                <dd>{{ comment.nick }}</dd>
                <dt>{{ 'Contents' }}</dt>
                <dd>{{ comment.contents }}</dd>
                <dt>
                    {% if is_granted('DELETE', post) %}
                        <a class="btn btn-outline-danger" href="{{ url('comment_delete', {id: comment.id}) }}" title="{{ 'action.delete'|trans }}">
                            {{ 'Delete comment'|trans }}
                        </a>
                    {% endif %}
                </dt>
            </dl>
        {% endfor %}
        <p>
            <a class="btn btn-outline-primary" href="{{ url('post_comment', {id: post.id}) }}" title="{{ 'action.add_comment'|trans }}">
                {{ 'Add comment'|trans }}
            </a>
        </p>
        <p>
            <a class="btn btn-outline-primary" href="{{ url('post_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'Back to list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'Record not found'|trans }}
        </p>
    {% endif %}
{% endblock %}