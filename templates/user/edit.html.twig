{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.edit_user'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.edit_user'|trans({'%id%': user.id|default('')}) }}</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary"/>
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('user_show', {id: user.id}) }}" class="btn btn-link">
            {{ 'action.back_to_profile'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}